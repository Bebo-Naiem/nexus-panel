{
  "meta": {
    "version": "PTDL_v2",
    "name": "Rust Game Server",
    "author": "Nexus Panel Team",
    "description": "Official Rust game server with full customization options"
  },
  "features": {
    "docker_image": "didstopia/rust-server:latest",
    "startup_command": "./RustDedicated -batchmode +server.hostname \"{{SERVER_NAME}}\" +server.port {{SERVER_PORT}} +server.queryport {{QUERY_PORT}} +server.identity \"{{SERVER_IDENTITY}}\" +server.level \"{{MAP}}\" +server.seed {{SEED}} +server.worldsize {{WORLD_SIZE}} +server.maxplayers {{MAX_PLAYERS}} +rcon.port {{RCON_PORT}} +rcon.password \"{{RCON_PASSWORD}}\" +rcon.web 1 +server.saveinterval {{SAVE_INTERVAL}}",
    "stop_command": "quit"
  },
  "config": {
    "files": {},
    "startup": {
      "done": ["Server startup complete", "Listening for connections"],
      "user_interaction": false,
      "timeout": 120
    },
    "logs": {
      "custom": false,
      "location": "logs/FPS.log"
    },
    "stop": "quit"
  },
  "variables": [
    {
      "name": "SERVER_NAME",
      "description": "Public name of the server",
      "env_variable": "SERVER_NAME",
      "default_value": "Nexus Panel Rust Server",
      "required": true,
      "user_viewable": true,
      "user_editable": true
    },
    {
      "name": "SERVER_IDENTITY",
      "description": "Server identity/folder name",
      "env_variable": "SERVER_IDENTITY",
      "default_value": "rust-server",
      "required": true,
      "user_viewable": true,
      "user_editable": true
    },
    {
      "name": "MAP",
      "description": "Map/level to use",
      "env_variable": "MAP",
      "default_value": "Procedural Map",
      "required": true,
      "user_viewable": true,
      "user_editable": true,
      "options": ["Procedural Map", "HapisIsland", "SavasIsland"]
    },
    {
      "name": "SEED",
      "description": "Map seed (0 for random)",
      "env_variable": "SEED",
      "default_value": "0",
      "required": true,
      "user_viewable": true,
      "user_editable": true
    },
    {
      "name": "WORLD_SIZE",
      "description": "Size of the world map",
      "env_variable": "WORLD_SIZE",
      "default_value": "3000",
      "required": true,
      "user_viewable": true,
      "user_editable": true,
      "options": ["1000", "2000", "3000", "4000", "5000", "6000"]
    },
    {
      "name": "MAX_PLAYERS",
      "description": "Maximum number of players",
      "env_variable": "MAX_PLAYERS",
      "default_value": "100",
      "required": true,
      "user_viewable": true,
      "user_editable": true
    },
    {
      "name": "QUERY_PORT",
      "description": "Steam query port",
      "env_variable": "QUERY_PORT",
      "default_value": "28015",
      "required": true,
      "user_viewable": true,
      "user_editable": true
    },
    {
      "name": "RCON_PORT",
      "description": "RCON port for remote administration",
      "env_variable": "RCON_PORT",
      "default_value": "28016",
      "required": true,
      "user_viewable": true,
      "user_editable": true
    },
    {
      "name": "RCON_PASSWORD",
      "description": "RCON password",
      "env_variable": "RCON_PASSWORD",
      "default_value": "change_me",
      "required": true,
      "user_viewable": false,
      "user_editable": true
    },
    {
      "name": "SAVE_INTERVAL",
      "description": "Auto-save interval in seconds",
      "env_variable": "SAVE_INTERVAL",
      "default_value": "600",
      "required": true,
      "user_viewable": true,
      "user_editable": true
    }
  ]
}